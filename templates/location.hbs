{{#*inline "page"}}
    <form action="/modifylocation" method="get" accept-charset="utf-8">
        <table>
            <tr><th colspan="2">Modify location</th></tr>
            <tr>
                <td><label for="amount">Amount</label></td>
                <td><input type="number" id="amount" name="amount" min="0.01" step="0.01" value="{{location.amount}}" required /></td>
            </tr>
            <tr>
                <td><label for="unit">Unit</label></td>
                <td>
                    <select name="unit" id="unit" required>
                        <option value="{{location.unit_id}}" selected>Current ({{location.unit}})</option>
                        <option value="0">Piece</option>
                        {{#each quantities}}
                            <option value="{{id}}">{{name}} ({{unit}})</option>
                        {{/each}}
                    </select>
                </td>
            </tr>
            <tr>
                <td><label for="radius">Radius</label></td>
                <td><input type="number" id="radius" name="radius" min="0" value="{{location.radius}}" required /></td>
            </tr>
            <tr>
                <td><label for="lat">Latitude</label></td>
                <td><input type="number" id="lat" name="lat" min="-90" max="90" step="0.01" value="{{location.lat}}" required /></td>
            </tr>
            <tr>
                <td><label for="lon">Longitude</label></td>
                <td><input type="number" id="lon" name="lon" min="-180" max="180" step="0.01" value="{{location.lon}}" required /></td>
            </tr>
            <tr>
                <td><input type="hidden" name="resource_id" value="{{location.id}}"></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    </form>
{{/inline}}
{{> layout}}